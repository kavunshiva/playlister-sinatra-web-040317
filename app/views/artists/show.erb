<tr>
  <th><h2><%= @artist.name %></h2></th>
</tr>

<tr>
  <th><h3>Genres:</h3></th>
</tr>
<% @artist.genres.each do |genre| %>
  <tr>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a><br/>
  </tr>
<% end %>

<tr>
  <th><h3>Songs:</h3></th>
</tr>
<% @artist.songs.each do |song| %>
  <tr>
    <a href="/songs/<%= song.slug %>"><%= song.name %></a><br/>
  </tr>
<% end %>

<p>
  <hr>
</p>
<p>
  <a href="/artists">Back to artists</a>
</p>
